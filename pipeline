pipeline {
    agent any

    environment {
        GITHUB_REPO = 'https://github.com/your-username/your-repo.git'
        LOCAL_REPO_PATH = '/path/to/local/repo/on/aws/vm'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clean workspace before checking out code
                cleanWs()
                // Checkout code from GitHub
                git branch: 'main', url: "${GITHUB_REPO}"
            }
        }

        stage('Update Local Repository') {
            steps {
                // Use SSH agent to securely access the AWS VM
                sshagent(credentials: ['your-ssh-key-id']) {
                    // Update the local repository on AWS VM
                    sh """
                        ssh ubuntu@your-aws-vm-ip '
                        cd ${LOCAL_REPO_PATH}
                        git fetch origin
                        git reset --hard origin/main
                        '
                    """
                }
            }
        }

        stage('Run Tests') {
            steps {
                // Run your tests here
                sh 'python -m unittest discover tests'
            }
        }

        stage('Deploy') {
            steps {
                // Add any deployment steps here if needed
                echo 'Deployment completed'
            }
        }
    }

    post {
        success {
            echo 'Pipeline succeeded! Local repository updated.'
        }
        failure {
            echo 'Pipeline failed. Please check the logs for details.'
        }
    }
}
